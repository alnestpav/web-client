<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>/signin</welcome-file>
    </welcome-file-list>


    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Success</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ClusterSearchRole</role-name>
            <role-name>DomainSearchRole</role-name>
            <role-name>ServerSearchRole</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>myrealm</realm-name>
        <form-login-config>
            <form-login-page>/signin.jsp</form-login-page>
            <form-error-page>/signin.jsp?error=true</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>ClusterSearchRole</role-name>
    </security-role>
    <security-role>
        <role-name>DomainSearchRole</role-name>
    </security-role>
    <security-role>
        <role-name>ServerSearchRole</role-name>
    </security-role>


    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>ru.siblion.nesterov.client.SearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>downloadFileServlet</servlet-name>
        <servlet-class>ru.siblion.nesterov.client.DownloadFileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>downloadFileServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signinServlet</servlet-name>
        <servlet-class>ru.siblion.nesterov.client.SigninServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>signinServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signoutServlet</servlet-name>
        <servlet-class>ru.siblion.nesterov.client.SignoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>signoutServlet</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>

</web-app>